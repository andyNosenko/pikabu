{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .error {color: red;}
    </style>

    <div class="example-wrapper">
        {% if is_granted("ROLE_USER") == true or is_granted("ROLE_ADMIN") %}
            <a href="{{ path('logout') }}">Logout</a>
        {% endif %}
        <h1>Login Page! âœ…</h1>
        {% if error %}
            <span class="error">{{ error.messageKey }}</span>
        {% endif %}
        <form action="{{ path('login') }}" method="POST">
            <input type="text" name="_username" value="{{ last_username }}" placeholder="Your email here...">
            <input type="password" name="_password">
            <button type="submit">Login</button>
        </form>
        <br>
        <a href="{{ path('register') }}">Create new account</a>
    </div>
{% endblock %}
