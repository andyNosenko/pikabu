{% extends 'base.html.twig' %}

{% block title %}Hello ArticlesController!{% endblock %}
{% block body %}
    <div class="container">
        <h2>Article {{ article.title }}</h2>
        <div class="card bg-success text-white">
            <div class="card-body">
                <div>Title: {{ article.title }}</div>
                <br>
                <div>Author: {{ article.author }}</div>
                <br>
                <div>Author: {{ article.createdAt|date("F jS \\a\\t g:ia") }}</div>
                <br>
                <div>Content: <br> {{ article.content }}</div>
            </div>
        </div>

        <h2>Comments</h2>
        {% for comment in article.comments %}
            <div class="card bg-warning text-black">
                <div class="card-body">
                    <div>Author: {{ comment.author }}</div>
                    <br>
                    <div>Author: {{ comment.createdAt|date("F jS \\a\\t g:ia") }}</div>
                    <br>
                    <div>Content: <br> {{ comment.content }}</div>
                    <div class="text-white bg-white"><a href="{{ path('comment_update_form', {'article': article.id, 'comment': comment.id }) }}">Edit</a></div>
                    <div class="text-white bg-white"><a href="{{ path('comment_delete', {'article': article.id, 'comment': comment.id }) }}">Delete</a></div>
                    <div class="text-white bg-white"><a href="{{ path('comment_reply', {'article': article.id, 'comment': comment.id }) }}">Reply</a></div>
                </div>
            </div>
            {% for subComment in comment.children %}
                <div class="card bg-info text-black" style="margin-left: 20px">
                    <div class="card-body">
                        <div>SubCommentAuthor: {{ subComment.author }}</div>
                        <br>
                        <div>SubCommentAuthor: {{ subComment.createdAt|date("F jS \\a\\t g:ia") }}</div>
                        <br>
                        <div>SubCommentContent: <br> {{ subComment.content }}</div>
                        <div class="text-white bg-white"><a href="{{ path('comment_update_form', {'article': article.id, 'comment': subComment.id }) }}">Edit</a></div>
                        <div class="text-white bg-white"><a href="{{ path('comment_delete', {'article': article.id, 'comment': subComment.id }) }}">Delete</a></div>
                        <div class="text-white bg-white"><a href="{{ path('comment_reply', {'article': article.id, 'comment': subComment.id }) }}">Reply</a></div>
                    </div>
                </div>
                {% for subSubComment in subComment.children %}
                    <div class="card bg-warning text-black" style="margin-left: 40px">
                        <div class="card-body">
                            <div>SubSubCommentAuthor: {{ subSubComment.author }}</div>
                            <br>
                            <div>SubSubCommentAuthor: {{ subSubComment.createdAt|date("F jS \\a\\t g:ia") }}</div>
                            <br>
                            <div>SubSubCommentContent: <br> {{ subSubComment.content }}</div>
                            <div class="text-white bg-white"><a href="{{ path('comment_update_form', {'article': article.id, 'comment': subSubComment.id }) }}">Edit</a></div>
                            <div class="text-white bg-white"><a href="{{ path('comment_delete', {'article': article.id, 'comment': subSubComment.id }) }}">Delete</a></div>
                            <div class="text-white bg-white"><a href="{{ path('comment_reply', {'article': article.id, 'comment': subSubComment.id }) }}">Reply</a></div>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        {% endfor %}
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {{ render(controller('App\\Controller\\CommentController::create', {'article': article.id })) }}
        {% endif %}
    </div>
{% endblock %}